        <table class="table table-bordered">
          <thead>
            <tr>
              
				<td style="width: 33%;" class="text-left">
	 		{{ text_payment_address }}</td>
              {% if shipping_method %}
              
				<td style="width: 33%;" class="text-left">
	 		{{ text_shipping_address }}</td>

				<td style="width: 34%;" class="text-left">{{ text_account_custom_field }}</td>
	 		
              {% endif %} </tr>
          </thead>
