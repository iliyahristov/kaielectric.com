{{ header }}{{ column_left }}
<div id="content">
	<div class="page-header">
		<div class="container-fluid">
			<div class="pull-right">
				<button type="button" data-toggle="tooltip" title="{{ button_filter }}" onclick="$('#filter-order').toggleClass('hidden-sm hidden-xs');" class="btn btn-default hidden-md hidden-lg"><i class="fa fa-filter"></i></button>
			</div>
			<h1>{{ heading_title }}</h1>
			<ul class="breadcrumb">
				{% for breadcrumb in breadcrumbs %}
					<li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
				{% endfor %}
			</ul>
		</div>
	</div>
	<div class="container-fluid">{% if error_warning %}
			<div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
				<button type="button" class="close" data-dismiss="alert">&times;</button>
			</div>
		{% endif %}
		{% if success %}
			<div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> {{ success }}
				<button type="button" class="close" data-dismiss="alert">&times;</button>
			</div>
		{% endif %}
		
		
		<div class="row">
			<div id="filter-order" class="col-md-12 col-sm-12 hidden-sm hidden-xs">
				<div class="panel panel-default">
					<div class="panel-heading">
						<h3 class="panel-title"><i class="fa fa-filter"></i> {{ text_filter }}</h3>
					</div>
					<div class="panel-body">
						<div class="row">
							<div class="form-group  col-md-3 col-sm-12">
								<label class="control-label" for="input-order-id">{{ entry_order_id }}</label>
								<input type="text" name="filter_abandoned_cart_id" value="{{ filter_abandoned_cart_id }}" placeholder="{{ entry_order_id }}" id="input-filter_abandoned_cart_id" class="form-control" />
							</div>
							<div class="form-group  col-md-3 col-sm-12">
								<label class="control-label" for="input-customer">{{ entry_customer }}</label>
								<input type="text" name="filter_name" value="{{ filter_name }}" placeholder="{{ entry_customer }}" id="input-customer" class="form-control" />
							</div>
							<div class="form-group  col-md-3 col-sm-12">
								<label class="control-label" for="input-telephone">{{ entry_telephone }}</label>
								<input type="text" name="filter_telephone" value="{{ filter_telephone }}" placeholder="{{ entry_telephone }}" id="input-telephone" class="form-control" />
							</div>
							<div class="form-group  col-md-3 col-sm-12">
								<label class="control-label" for="input-email">{{ entry_email }}</label>
								<input type="text" name="filter_email" value="{{ filter_email }}" placeholder="{{ entry_email }}" id="input-email" class="form-control" />
							</div>
							<div class="form-group  col-md-3 col-sm-12">
								<label class="control-label" for="input-filter_status_id">{{ entry_order_status }}</label>
								<select name="filter_status_id" id="input-filter_status_id" class="form-control">
									<option value=""></option>
									{% for key, status in statuses %}
										{% if key == filter_status_id %}
											<option value="{{ key }}" selected="selected">{{ status }}</option>
										{% else %}
											<option value="{{ key }}">{{ status }}</option>
										{% endif %}
									{% endfor %}
								</select>
							</div>
							
							<div class="form-group  col-md-3 col-sm-12">
								
								<label class="control-label" for="input-date-added">{{ entry_date_from }}</label>
								<div class="input-group date">
									<input type="text" name="filter_date_from" value="{{ filter_date_from }}" placeholder="{{ entry_date_from }}" data-date-format="YYYY-MM-DD" id="input-date-added" class="form-control" />
									<span class="input-group-btn">
										<button type="button" class="btn btn-default"><i class="fa fa-calendar"></i></button>
									</span></div>
							
							</div>
							<div class="form-group  col-md-3 col-sm-12">
								
								<label class="control-label" for="input-date-added">{{ entry_date_to }}</label>
								<div class="input-group date">
									<input type="text" name="filter_date_to" value="{{ filter_date_to }}" placeholder="{{ entry_date_to }}" data-date-format="YYYY-MM-DD" id="input-date-added" class="form-control" />
									<span class="input-group-btn">
										<button type="button" class="btn btn-default"><i class="fa fa-calendar"></i></button>
									</span></div>
							
							</div>
							
							<div class="form-group  col-md-3 col-sm-12">
								<label class="control-label" for="input-order-store">{{ entry_store }}</label>
								<select name="filter_store" id="input-order-store" class="form-control">
									<option value=""></option>
									{% for store in stores %}
										{% if store.store_id == filter_store %}
											<option value="{{ store.store_id }}" selected="selected">{{ store.name }}</option>
										{% else %}
											<option value="{{ store.store_id }}">{{ store.name }}</option>
										{% endif %}
									{% endfor %}
								</select>
							</div>
							<div class="clearfix"></div>
							
							<div class="form-group col-md-3 col-sm-12">
								<label class="control-label" for="input-comment">{{ entry_comment }}</label>
								<input type="text" name="filter_comment" value="{{ filter_comment }}" placeholder="{{ entry_comment }}" id="input-comment" class="form-control" />
							</div>
							<div class="form-group  col-md-3 col-sm-12">
								<label class="control-label" for="input-filter_send">{{ entry_send }}</label>
								<select name="filter_send" id="input-filter_send" class="form-control">
									<option value=""></option>
									{% for key, send_status in send_statuses %}
										{% if key == filter_send %}
											<option value="{{ key }}" selected="selected">{{ send_status }}</option>
										{% else %}
											<option value="{{ key }}">{{ send_status }}</option>
										{% endif %}
									{% endfor %}
								</select>
							</div>
							<div class="form-group col-md-3 col-sm-12"></div>
							
							<div class="form-group  col-md-3 col-sm-12 text-right">
								<button type="button" id="button-filter" class="btn btn-default"><i class="fa fa-filter"></i> {{ button_filter }}</button>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="col-md-12 col-sm-12">
				
				<div class="panel panel-default">
					<div class="panel-heading">
						<h3 class="panel-title"><i class="fa fa-list"></i> {{ text_list }}</h3>
					</div>
					<div class="panel-body">
						
						<div class="table-responsive">
							<table class="table table-bordered table-hover">
								<thead>
								<tr>
									<td class="text-left">{% if sort == 'abandoned_cart_id' %} <a href="{{ sort_abandoned_cart_id }}" class="{{ order|lower }}">ID</a> {% else %} <a href="{{ sort_abandoned_cart_id }}">ID</a> {% endif %}</td>
									<td class="text-left">{{ column_product }}</td>
									<td class="text-left">{{ column_price }}</td>
									<td class="text-left">{% if sort == 'name' %} <a href="{{ sort_name }}" class="{{ order|lower }}">{{ column_customer }}</a> {% else %} <a href="{{ sort_name }}">{{ column_customer }}</a> {% endif %}</td>
									<td class="text-left">{{ column_comment }}</td>
									<td class="text-left">{% if sort == 'status_id' %} <a href="{{ sort_status_id }}" class="{{ order|lower }}">{{ column_store }}</a> {% else %} <a href="{{ sort_status_id }}">{{ column_status }}</a> {% endif %}</td>
									<td class="text-left">{% if sort == 'date_added' %} <a href="{{ sort_date_added }}" class="{{ order|lower }}">{{ column_date_added }}</a> {% else %} <a href="{{ sort_date_added }}">{{ column_date_added }}</a> {% endif %}</td>
									<td class="text-left">{% if sort == 'date_modified' %} <a href="{{ sort_date_modified }}" class="{{ order|lower }}">{{ column_date_modified }}</a> {% else %} <a href="{{ sort_date_modified }}">{{ column_date_modified }}</a> {% endif %}</td>
									<td class="text-left">{% if sort == 'send' %} <a href="{{ sort_send }}" class="{{ order|lower }}">{{ column_send }}</a> {% else %} <a href="{{ sort_send }}">{{ column_send }}</a> {% endif %}</td>
									<td class="text-left">{% if sort == 'date_send' %} <a href="{{ sort_date_send }}" class="{{ order|lower }}">{{ column_date_send }}</a> {% else %} <a href="{{ sort_send }}">{{ column_date_send }}</a> {% endif %}</td>
									<td class="text-left">{{ column_action }}</td>
								</tr>
								</thead>
								<tbody>
								{% for order in orders %}
									<tr>
										
										<td class="text-left">{{ order['abandoned_cart_id'] }}</td>
										<td class="text-left">
											{% for product in order.products %}
												<a href="{{ product['link'] }}">{{ product['name'] }}</a>
												{% for option in product.options %}
													<br/>
													<small> - {{ option.name }}: {{ option.value }}</small>
												{% endfor %}
												<br/>
											{% endfor %}
										</td>
										<td class="text-left">
											{% for product in order.products %}
												{{ product['quantity'] }} <smal>x</smal> {{ product['price'] }}
												<br/>
											{% endfor %}
											-------<br/>
											<strong>{{ order['total'] }}</strong>
										</td>
										<td class="text-left">
											{{ order['name'] }}
											{% if order['telephone'] %}<br>{{ order['telephone'] }}{% endif %}
											{% if order['email'] %}<br>{{ order['email'] }}{% endif %}
											{% if order['shipping_method'] %}<br>-------<br/>{{ order['shipping_method'] }}{% endif %}
											{% if order['address'] %}<br>-------<br/>{{ order['address'] }}{% endif %}
										</td>
										<td class="text-left">{{ order['comment'] }}</td>
										<td class="text-left">
											{% if order['status_id'] == 1 %}<strong style="color:red">{% else %}<strong>{% endif %}{{ order['status'] }}</strong>
										</td>
										<td class="text-left">{{ order['date_added'] }}</td>
										<td class="text-left">{{ order['date_modified'] }}</td>
										<td class="text-left">
											{% if order['send'] == 0 %}<strong style="color:red">{% else %}<strong>{% endif %}{{ order['send_status'] }}</strong>
										</td>
										<td class="text-left">{% if order['date_send'] %}{{ order['date_send'] }}{% endif %}</td>
										<td class="text-right" style="min-width:180px;">
											<div class="btn-group">
											{% if order['email'] %}
											<button data-send_order_id="{{ order.abandoned_cart_id }}" data-toggle="tooltip" title="{{ button_send }}" onclick="sendOrder('{{ order['abandoned_cart_id'] }}');"  class="btn btn-warning send_order send_order_{{ order.abandoned_cart_id }}"><i class="fa fa-envelope"></i></button>
											{% endif %}
											{% if order['status_id'] == 1 %}
												<button type="button" class="btn btn-info" title="{{ button_add_to_cart }}" id="add_to_cart{{ order['abandoned_cart_id'] }}" onclick="addToCart('{{ order['abandoned_cart_id'] }}');" data-toggle="tooltip" data-loading-text="..." ><i class="fa fa-shopping-cart fw"></i></button>
											{% endif %}
											<button data-edit_order_id="{{ order.abandoned_cart_id }}" data-toggle="tooltip" title="{{ button_edit }}" onclick="editOrder('{{ order['abandoned_cart_id'] }}');"  class="btn btn-primary edit_order edit_order_{{ order.abandoned_cart_id }}"><i class="fa fa-pencil"></i></button>
											<button data-order_id="{{ order.abandoned_cart_id }}" data-toggle="tooltip" title="{{ button_delete }}" onclick="deleteOrder('{{ order['abandoned_cart_id'] }}');"  class="btn btn-danger delete_order"><i class="fa fa-trash-o"></i></button>
										</div>
										</td>
									</tr>
									<tr style="display: none" class="box_edit_order_{{ order.abandoned_cart_id }}">
										<form action="index.php?route=sale/tk_abandoned_cart/update&user_token={{ user_token }}" method="post">
											<td class="text-left" colspan="9">
												<input type="text" name="comment" class="form-control" value="{{ order['comment'] }}" placeholder="Оставете коментар тук">
											</td>
											<td>
												<select name="status_id" class="form-control">
													{% for key, status in statuses %}
														{% if key == order['status_id'] %}
															<option value="{{ key }}" selected="selected">{{ status }}</option>
														{% else %}
															<option value="{{ key }}">{{ status }}</option>
														{% endif %}
													{% endfor %}
												</select>
												<input type="hidden" name="abandoned_cart_id" value="{{ order['abandoned_cart_id'] }}">
											</td>
											<td>
												<button type="submit" class="btn btn-success update_comment"><i class="fa fa-save"></i></button>
											</td>
										</form>
									</tr>
								{% endfor %}
								</tbody>
							</table>
						</div>
						
						<div class="row">
							<div class="col-sm-6 text-left">{{ pagination }}</div>
							<div class="col-sm-6 text-right">{{ results }}</div>
						</div>
					</div>
				</div>
			
			
			
			</div>
		</div>
	
	</div>
</div>


<script>

    $('.edit_order').click(function(){
        var edit_order_id = $(this).data("edit_order_id");
        $('.box_edit_order_'+edit_order_id).toggle();
    });

    $('#button-filter').on('click', function() {
        url = '';

        var filter_abandoned_cart_id = $('input[name=\'filter_abandoned_cart_id\']').val();

        if (filter_abandoned_cart_id) {
            url += '&filter_abandoned_cart_id=' + encodeURIComponent(filter_abandoned_cart_id);
        }

        var filter_name = $('input[name=\'filter_name\']').val();

        if (filter_name) {
            url += '&filter_name=' + encodeURIComponent(filter_name);
        }

        var filter_telephone = $('input[name=\'filter_telephone\']').val();

        if (filter_telephone) {
            url += '&filter_telephone=' + encodeURIComponent(filter_telephone);
        }

        var filter_email = $('input[name=\'filter_email\']').val();

        if (filter_email) {
            url += '&filter_email=' + encodeURIComponent(filter_email);
        }

        var filter_status_id = $('select[name=\'filter_status_id\']').val();

        if (filter_status_id !== '') {
            url += '&filter_status_id=' + encodeURIComponent(filter_status_id);
        }

        var filter_date_from = $('input[name=\'filter_date_from\']').val();

        if (filter_date_from) {
            url += '&filter_date_from=' + encodeURIComponent(filter_date_from);
        }

        var filter_date_to = $('input[name=\'filter_date_to\']').val();

        if (filter_date_to) {
            url += '&filter_date_to=' + encodeURIComponent(filter_date_to);
        }

        var filter_store = $('select[name=\'filter_store\']').val();

        if (filter_store) {
            url += '&filter_store=' + encodeURIComponent(filter_store);
        }

        var filter_send = $('select[name=\'filter_send\']').val();

        if (filter_send) {
            url += '&filter_send=' + encodeURIComponent(filter_send);
        }

        var filter_comment = $('input[name=\'filter_comment\']').val();

        if (filter_comment) {
            url += '&filter_comment=' + encodeURIComponent(filter_comment);
        }

        location = 'index.php?route=sale/tk_abandoned_cart&user_token={{ user_token }}' + url;
    });


    function addToCart(abandoned_cart_id) {

        $.ajax({
            url: 'index.php?route=sale/tk_abandoned_cart/add_to_cart&user_token={{ user_token }}&abandoned_cart_id=' +  abandoned_cart_id,
            type: 'POST',
            data: '',
            dataType: 'json',
            beforeSend: function() {
                $('#add_to_cart'+abandoned_cart_id).button('loading');
            },
            complete: function() {
                $('#add_to_cart'+abandoned_cart_id).button('reset');
            },
            success: function(json) {

                if (json['redirect']) {

                    window.open(json['redirect'], "_blank") || window.location.replace(json['redirect']);
                }

            }
        });

    }

    function deleteOrder(abandoned_cart_id) {

        if (confirm('{{ text_confirm }}')) {
            $.ajax({
                url: 'index.php?route=sale/tk_abandoned_cart/delete&user_token={{ user_token }}&abandoned_cart_id=' + abandoned_cart_id,
                type: 'POST',
                data: '',
                dataType: 'json',
                beforeSend: function() {

                },
                complete: function() {

                },
                success: function(json) {

                    $('.alert-dismissible').remove();

                    if (json['error']) {
                        $('#content > .container-fluid').prepend('<div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> ' + json['error'] + ' <button type="button" class="close" data-dismiss="alert">&times;</button></div>');
                    }

                    if (json['redirect']) {
                        location = json['redirect'];
                    }
                },
                error: function(xhr, ajaxOptions, thrownError) {
                    alert(thrownError + "\r\n" + xhr.statusText + "\r\n" + xhr.responseText);
                }
            });
        }
    }

    function sendOrder(abandoned_cart_id) {

        if (confirm('{{ text_confirm }}')) {
            $.ajax({
                url: 'index.php?route=sale/tk_abandoned_cart/send&user_token={{ user_token }}&abandoned_cart_id=' + abandoned_cart_id,
                type: 'POST',
                data: '',
                dataType: 'json',
                beforeSend: function() {

                },
                complete: function() {

                },
                success: function(json) {

                    $('.alert-dismissible').remove();

                    if (json['redirect']) {
                       location = json['redirect'];
                    }
                },
                error: function(xhr, ajaxOptions, thrownError) {
                    alert(thrownError + "\r\n" + xhr.statusText + "\r\n" + xhr.responseText);
                }
            });
        }
    }

</script>

