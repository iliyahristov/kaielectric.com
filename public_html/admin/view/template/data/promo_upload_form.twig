{{ header }}{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="pull-right">
                <button type="submit" form="form-custom-field" data-toggle="tooltip" title="{{ button_save }}"
                        class="btn btn-primary">
                    <i class="fa fa-save"></i>
                </button>
                <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default">
                    <i class="fa fa-reply"></i>
                </a>
                <button type="submit" form="delete-old" data-toggle="tooltip" title="{{ button_delete }}"
                        class="btn btn-danger">
                    <i class="fa fa-trash-o"></i>
                </button>
            </div>
            <h1>Добавяне на данни - Промоции</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>

    <div class="container-fluid">
        {% if error_warning %}
            <div class="alert alert-danger alert-dismissible">
                <i class="fa fa-exclamation-circle"></i> {{ error_warning }}
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        {% endif %}
        {% if success %}
            <div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> {{ success }}
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        {% endif %}
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-pencil"></i> Добавете файл и посочете колони за данни</h3>
            </div>
            <div class="panel-body">
                <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-custom-field"
                      class="form-horizontal">
                    <fieldset>
                        <div class="row">
                            <div class="form-group required col-sm-4">
                                <label class="col-sm-4 control-label">Баркод 1/EAN/</label>
                                <div class="col-sm-8">
                                    <div class="input-group">
                                        <input type="text" name="data[barcode]" value="{{ barcode }}" placeholder="A"
                                               class="form-control"/>
                                        {% if error_barcode %}
                                            <div class="text-danger">{{ error_barcode }}</div>
                                        {% endif %}
                                    </div>
                                </div>
                            </div><!--1-->
                            <div class="form-group col-sm-4">
                                <label class="col-sm-4 control-label">От ред</label>
                                <div class="col-sm-8">
                                    <div class="input-group">
                                        <input type="text" name="data[from_row]" value="{{ from_row }}" placeholder="5"
                                               class="form-control"/>

                                    </div>
                                </div>
                            </div><!--2-->
                            <div class="form-group col-sm-4">
                                <label class="col-sm-4 control-label">До ред</label>
                                <div class="col-sm-8">
                                    <div class="input-group">
                                        <input type="text" name="data[to_row]" value="{{ to_row }}" placeholder="50"
                                               class="form-control"/>
                                    </div>
                                </div>
                            </div><!--3-->
                            <div class="form-group col-sm-4">
                                <label class="col-sm-4 control-label">Промо цена</label>
                                <div class="col-sm-8">
                                    <div class="input-group">
                                        <input type="text" name="data[special_price]" value="{{ special_price }}"
                                               placeholder="" class="form-control"/>
                                        {% if error_special_price %}
                                            <div class="text-danger">{{ error_special_price }}</div>
                                        {% endif %}
                                    </div>
                                </div>
                            </div><!--4-->
                            <div class="form-group col-sm-4">
                                <label class="col-sm-4 control-label">Начало на промоцията</label>
                                <div class="col-sm-8">
                                    <div class="input-group">
                                        <input type="text" name="data[date_start]" value="{{ date_start }}"
                                               placeholder="B" class="form-control"/>
                                        {% if error_date_start %}
                                            <div class="text-danger">{{ error_date_start }}</div>
                                        {% endif %}
                                    </div>
                                </div>
                            </div><!--5-->
                            <div class="form-group col-sm-4">
                                <label class="col-sm-4 control-label">Край на промоцията</label>
                                <div class="col-sm-8">
                                    <div class="input-group">
                                        <input type="text" name="data[date_end]" value="{{ date_end }}" placeholder="C"
                                               class="form-control"/>
                                        {% if error_date_end %}
                                            <div class="text-danger">{{ error_date_end }}</div>
                                        {% endif %}
                                    </div>
                                </div>
                            </div><!--6-->

                            <div class="form-group required col-sm-4">
                                <label class="col-sm-4 control-label">Файл с данни</label>
                                <div class="col-sm-8">
                                    <div class="input-group">
                                        <input type="file" name="data_file" class="form-control"/>
                                        {% if error_data_file %}
                                            <div class="text-danger">{{ error_data_file }}</div>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
            <form action="{{ delete_action }}" method="post" id="delete-old"/>
        </div>
    </div>
</div>
{{ footer }} 