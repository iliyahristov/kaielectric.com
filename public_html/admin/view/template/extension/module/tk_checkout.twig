									<label class="button-label">
										<input type="radio" name="module_tk_checkout_agree" value="0" {% if module_tk_checkout_agree == '0' %}checked="checked"{% endif %} />
										<span class="btn btn-default">{{ text_disabled }}</span>
									</label>
									
									<label class="button-label">
										<input type="radio" name="module_tk_checkout_agree" value="1" {% if module_tk_checkout_agree == '1' %}checked="checked"{% endif %} />
										<span class="btn btn-default">{{ text_enabled }}</span>
									</label>
								</div>
							</div>
							
							<div class="form-group">
								<label class="col-sm-3 control-label">{{ entry_agree_2 }}</label>
								<div class="col-sm-9">
									<label class="button-label">
										<input type="radio" name="module_tk_checkout_agree_2" value="0" {% if module_tk_checkout_agree_2 == '0' %}checked="checked"{% endif %} />
										<span class="btn btn-default">{{ text_disabled }}</span>
									</label>
									
