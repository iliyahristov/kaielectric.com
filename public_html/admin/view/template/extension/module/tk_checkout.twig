										<input type="radio" name="module_tk_checkout_agree_2" value="1" {% if module_tk_checkout_agree_2 == '1' %}checked="checked"{% endif %} />
										<span class="btn btn-default">{{ text_enabled }}</span>
									</label>
								</div>
							</div>
							
							<div class="form-group">
								<label class="col-sm-3 control-label">{{ entry_payment }}</label>
								<div class="col-sm-9">
							
