									<div class="well well-sm" style="height: 180px; overflow: auto;" id="totals">
										{% for total in oc_totals %}
											<div class="checkbox col-sm-4"><label><input type="checkbox" name="module_tk_checkout_totals[]" value="{{ total.code }}" {% if total.code in module_tk_checkout_totals %}checked="checked"{% endif %} />{{ total.name }}</label></div>
										{% endfor %}
									</div>
								</div>
							</div>
							
							<div class="form-group">
								<label class="col-sm-3 control-label" for="input-debug">Разреши дебъг опция</label>
								<div class="col-sm-9">
									<select name="module_tk_checkout_debug" id="input-debug" class="form-control">
										{% if module_tk_checkout_debug %}
											<option value="1" selected="selected">{{ text_enabled }}</option>
											<option value="0">{{ text_disabled }}</option>
										{% else %}
											<option value="1">{{ text_enabled }}</option>
											<option value="0" selected="selected">{{ text_disabled }}</option>
										{% endif %}
									</select>
								</div>
							</div>
							
							<div class="form-group">
								<label class="col-sm-3 control-label" for="input-module_tk_checkout_token">API TOKEN</label>
