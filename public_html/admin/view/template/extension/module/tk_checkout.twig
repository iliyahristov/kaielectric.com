										<input type="radio" name="module_tk_checkout_zone" value="1" {% if module_tk_checkout_zone == '1' %}checked="checked"{% endif %} />
										<span class="btn btn-default">{{ text_enabled_personal }}</span>
									</label>
									
									<label class="button-label">
										<input type="radio" name="module_tk_checkout_zone" value="2" {% if module_tk_checkout_zone == '2' %}checked="checked"{% endif %} />
										<span class="btn btn-default">{{ text_enabled_address }}</span>
									</label>
									
								</div>
							</div>
							
							<div class="form-group">
								<label class="col-sm-3 control-label" for="input-module_tk_checkout_required_phone">{{ entry_required_phone }}</label>
								<div class="col-sm-9">
									<label class="button-label">
										<input type="radio" name="module_tk_checkout_required_phone" value="0" {% if module_tk_checkout_required_phone == '0' %}checked="checked"{% endif %} />
										<span class="btn btn-default">{{ text_required }}</span>
									</label>
									
									<label class="button-label">
										<input type="radio" name="module_tk_checkout_required_phone" value="1" {% if module_tk_checkout_required_phone == '1' %}checked="checked"{% endif %} />
										<span class="btn btn-default">{{ text_not_required }}</span>
									</label>
									
									<label class="button-label">
										<input type="radio" name="module_tk_checkout_required_phone" value="2" {% if module_tk_checkout_required_phone == '2' %}checked="checked"{% endif %} />
										<span class="btn btn-default">{{ text_not_strong_required }}</span>
									</label>
									
									<label class="button-label">
										<input type="radio" name="module_tk_checkout_required_phone" value="3" {% if module_tk_checkout_required_phone == '3' %}checked="checked"{% endif %} />
										<span class="btn btn-default">{{ text_hidden }}</span>
									</label>
									
								</div>
							</div>
												
							<div class="form-group">
								<label class="col-sm-3 control-label" >{{ entry_required_email }}</label>
								<div class="col-sm-9">
									<label class="button-label">
										<input type="radio" name="module_tk_checkout_required_email" value="0" {% if module_tk_checkout_required_email == '0' %}checked="checked"{% endif %} />
										<span class="btn btn-default">{{ text_required }}</span>
									</label>
									
									<label class="button-label">
										<input type="radio" name="module_tk_checkout_required_email" value="2" {% if module_tk_checkout_required_email == '2' %}checked="checked"{% endif %} />
										<span class="btn btn-default">{{ text_not_required }}</span>
									</label>
									
									<label class="button-label">
										<input type="radio" name="module_tk_checkout_required_email" value="1" {% if module_tk_checkout_required_email == '1' %}checked="checked"{% endif %} />
										<span class="btn btn-default">{{ text_not_required_with_check }}</span>
									</label>
									
									<label class="button-label">
										<input type="radio" name="module_tk_checkout_required_email" value="3" {% if module_tk_checkout_required_email == '3' %}checked="checked"{% endif %} />
										<span class="btn btn-default">{{ text_hidden }}</span>
									</label>
								</div>
							</div>
							
							<div class="form-group block-module_tk_checkout_customer_mail" {% if module_tk_checkout_required_email > 0 %}style="display: block"{% else %}style="display: none"{% endif %}>
								<label class="col-sm-3 control-label" for="input-module_tk_checkout_customer_mail">{{ text_new_email }}</label>
								<div class="col-sm-9">
									<input type="text" name="module_tk_checkout_customer_mail" value="{{ module_tk_checkout_customer_mail }}" placeholder="{{ entry_email }}" id="input-module_tk_checkout_customer_mail" class="form-control" />
								</div>
							</div>
							
							<div class="form-group">
								<label class="col-sm-3 control-label" >{{ entry_register }}</label>
								<div class="col-sm-9">
									<label class="button-label">
										<input type="radio" name="module_tk_checkout_register" value="0" {% if module_tk_checkout_register == '0' %}checked="checked"{% endif %} />
										<span class="btn btn-default">{{ text_enabled_final }}</span>
									</label>
									<label class="button-label">
										<input type="radio" name="module_tk_checkout_register" value="2" {% if module_tk_checkout_register == '2' %}checked="checked"{% endif %} />
										<span class="btn btn-default">{{ text_enabled_personal }}</span>
									</label>
									<label class="button-label">
										<input type="radio" name="module_tk_checkout_register" value="3" {% if module_tk_checkout_register == '3' %}checked="checked"{% endif %} />
