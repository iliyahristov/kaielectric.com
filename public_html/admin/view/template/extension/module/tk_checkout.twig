												{% else %}
												<input type="checkbox" name="module_tk_checkout_popup_payments[]" value="{{ payment.code }}" />
												{{ payment.name }}
												{% endif %}
											</label>
										</div>
										{% endfor %}
									</div>
									<div class="alert alert-warning">{{ help_payment }}</div>
								</div>
							</div>
							
							{% if custom_fields %}
							<div class="form-group">
								<label class="col-sm-3 control-label" for="module_tk_checkout_invoice">{{ text_invoice }}</label>
								<div class="col-sm-9">
									<select name="module_tk_checkout_invoice" id="module_tk_checkout_invoice" class="form-control">
										<option value="9999">{{ text_no_invoice}}</option>
