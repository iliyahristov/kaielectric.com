										<span class="btn btn-default">{{ text_enabled_personal }}</span>
									</label>
									
									<label class="button-label">
										<input type="radio" name="module_tk_checkout_customer_group" value="2" {% if module_tk_checkout_customer_group == '2' %}checked="checked"{% endif %} />
										<span class="btn btn-default">{{ text_enabled_register }}</span>
									</label>
								
								</div>
							</div>
							
							<div class="form-group">
								<label class="col-sm-3 control-label" >{{ entry_zone }}</label>
								<div class="col-sm-9">
									<label class="button-label">
										<input type="radio" name="module_tk_checkout_zone" value="0" {% if module_tk_checkout_zone == '0' %}checked="checked"{% endif %} />
										<span class="btn btn-default">{{ text_disabled }}</span>
									</label>
									
