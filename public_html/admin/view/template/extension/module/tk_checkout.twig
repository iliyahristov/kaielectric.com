									</label>
									<label class="button-label">
										<input type="radio" name="module_tk_checkout_register" value="1" {% if module_tk_checkout_register == '1' %}checked="checked"{% endif %} />
										<span class="btn btn-default">{{ text_disabled }}</span>
									</label>
								</div>
							</div>
							
							<div class="form-group">
								<label class="col-sm-3 control-label">{{ entry_agree }}</label>
