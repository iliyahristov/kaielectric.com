{{ header }}
{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-payment" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel_url }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
          <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
      <div class="alert alert-danger alert-dismissible">
        <i class="fa fa-exclamation-circle"></i> {{ error_warning }}
        <button type="button" class="close" data-dismiss="alert">&times;</button>
      </div>
    {% endif %}

    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action_url }}" method="post" enctype="multipart/form-data" id="form-payment" class="form-horizontal">
          <!-- total -->
          <div class="form-group">
            <label class="col-sm-3 control-label" for="input-total"><span data-toggle="tooltip" title="{{ help_entry_total }}">{{ entry_total }}</span></label>
            <div class="col-sm-9">
              <input type="text" name="payment_econt_payment_total" value="{{ payment_econt_payment_total }}" id="input-total" class="form-control" />
            </div>
          </div>

          <!-- order status - payment_completed  -->
          <div class="form-group">
            <label class="col-sm-3 control-label" for="payment_econt_payment_order_status_payment_completed_id">{{ entry_order_status_payment_completed }}</label>
            <div class="col-sm-9">
              <select name="payment_econt_payment_order_status_payment_completed_id" id="payment_econt_payment_order_status_payment_completed_id" class="form-control">
                {% for order_status in order_statuses %}
                  {% if order_status.order_status_id == payment_econt_payment_order_status_payment_completed_id %}
                    <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                  {% else %}
                    <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                  {% endif %}
                {% endfor %}
              </select>
            </div>
          </div>

          <!-- order status - payment_processing -->
          <div class="form-group remove-top-separator">
            <label class="col-sm-3 control-label" for="payment_econt_payment_order_status_payment_processing_id">{{ entry_order_status_payment_processing }}</label>
            <div class="col-sm-9">
              <select name="payment_econt_payment_order_status_payment_processing_id" id="payment_econt_payment_order_status_payment_processing_id" class="form-control">
                {% for order_status in order_statuses %}
                  {% if order_status.order_status_id == payment_econt_payment_order_status_payment_processing_id %}
                    <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                  {% else %}
                    <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                  {% endif %}
                {% endfor %}
              </select>
            </div>
          </div>

          <div class="form-group remove-top-separator">
            <div class="col-sm-12"  style="text-align: right;">
              <a href="{{ edit_order_statuses_url }}" target="_self">{{ text_edit_order_statuses }}</a>
            </div>
          </div>

          <!-- geo zone -->
          <div class="form-group">
            <label class="col-sm-3 control-label" for="input-geo-zone">{{ entry_geo_zone }}</label>
            <div class="col-sm-9">
              <select name="payment_econt_payment_geo_zone_id" id="input-geo-zone" class="form-control">
                <option value="0">{{ text_entry_geo_zone_all_zones }}</option>
                {% for geo_zone in geo_zones %}
                  {% if geo_zone.geo_zone_id == payment_econt_payment_geo_zone_id %}
                    <option value="{{ geo_zone.geo_zone_id }}" selected="selected">{{ geo_zone.name }}</option>
                  {% else %}
                    <option value="{{ geo_zone.geo_zone_id }}">{{ geo_zone.name }}</option>
                  {% endif %}
                {% endfor %}
              </select>
            </div>
          </div>

          <!-- status -->
          <div class="form-group">
            <label class="col-sm-3 control-label" for="input-status">{{ entry_status }}</label>
            <div class="col-sm-9">
              <select name="payment_econt_payment_status" id="input-status" class="form-control">
                {% if payment_econt_payment_status %}
                  <option value="1" selected="selected">{{ text_entry_status_enabled }}</option>
                  <option value="0">{{ text_entry_status_disabled }}</option>
                {% else %}
                  <option value="1">{{ text_entry_status_enabled }}</option>
                  <option value="0" selected="selected">{{ text_entry_status_disabled }}</option>
                {% endif %}
              </select>
            </div>
          </div>

          <!-- sort order -->
          <div class="form-group">
            <label class="col-sm-3 control-label" for="input-sort-order">{{ entry_sort_order }}</label>
            <div class="col-sm-9">
              <input id="input-sort-order" class="form-control" type="text" name="payment_econt_payment_sort_order" value="{{ payment_econt_payment_sort_order }}" />
            </div>
          </div>

          <!-- explanatory fields for customers  -->
          <ul class="guaranteed-by-econt nav nav-tabs">
            {% for language in systemLanguages %}
              <li><a href="#language_{{ language.language_id }}" data-toggle="tab"><img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}" alt="{{ language.name }}" /> {{ language.name }}</a></li>
            {% endfor %}
          </ul>
          <div class="tab-content">
            {% for language in systemLanguages %}
              <div class="tab-pane" id="language_{{ language.language_id }}">
                <!-- payment title -->
                <div class="form-group">
                  <label class="col-sm-3 control-label" for="input-econt-payment-title-lang-{{ language.language_id }}">{{ entry_title }}</label>
                  <div class="col-sm-9">
                    <input type="text" name="payment_econt_payment_title_lang_{{ language.language_id }}" value="{{ _context['payment_econt_payment_title_lang_' ~ language.language_id] }}" id="input-econt-payment-title-lang-{{ language.language_id }}" class="form-control" />
                  </div>
                </div>

                <!-- payment logo -->
                <div class="form-group">
                  <label class="col-sm-3 control-label" for="input-econt-payment-logo-lang-{{ language.language_id }}">{{ entry_logo }}</label>
                  <div class="col-sm-9">
                    <select name="payment_econt_payment_logo_lang_{{ language.language_id }}" id="input-econt-payment-logo-lang-{{ language.language_id }}" class="form-control gecd_logo">
                      <option value="">---</option>
                      {% if (_context['payment_econt_payment_logo_lang_' ~ language.language_id] == 'dark') %}
                        <option value="dark" selected="selected">{{ text_entry_logo_dark }}</option>
                        <option value="light">{{ text_entry_logo_light }}</option>
                      {% elseif (_context['payment_econt_payment_logo_lang_' ~ language.language_id] == 'light') %}
                        <option value="dark">{{ text_entry_logo_dark }}</option>
                        <option value="light" selected="selected">{{ text_entry_logo_light }}</option>
                      {% else %}
                        <option value="dark">{{ text_entry_logo_dark }}</option>
                        <option value="light">{{ text_entry_logo_light }}</option>
                      {% endif %}
                    </select>
                  </div>
                </div>

                <!-- payment description -->
                <div class="form-group">
                  <label class="col-sm-3 control-label" for="input-econt-payment-description-lang-{{ language.language_id }}">{{ entry_description }}</label>
                  <div class="col-sm-9">
                    <textarea name="payment_econt_payment_description_lang_{{ language.language_id }}" id="input-econt-payment-description-lang-{{ language.language_id }}" class="form-control">{{ _context['payment_econt_payment_description_lang_' ~ language.language_id] }}</textarea>
                  </div>
                </div>
              </div>
            {% endfor %}
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<style>
  .logo-image {
    margin-top: 10px;
    padding: 10px;
    background-color: #dbd9d9;
    border-radius: 3px;
  }
  .logo-image.hide {
    display: none;
  }
  .form-group.remove-top-separator {
    border-top: none;
    padding-top: 0;
  }
</style>
<script>
  document.addEventListener('DOMContentLoaded', function() {
    $(function($) {
      $('.guaranteed-by-econt.nav.nav-tabs a[data-toggle=tab]:first').click();

      let logoImageBaseURL = '/catalog/view/theme/default/image';
      let logoImages = {};
      $('select.gecd_logo').change(function() {
        let $this = $(this);
        let thisId = $this.attr('id');

        if (!logoImages[thisId]) {
          logoImages[thisId] = $('<img>').attr({
            'class': 'logo-image hide',
            'alt': 'logo-image-' + thisId
          });
          logoImages[thisId].insertAfter($this);
        }

        let thisValue = $this.val()
        if (thisValue === '') logoImages[thisId].addClass('hide');
        else {
          logoImages[thisId].attr('src', logoImageBaseURL + '/econt_payment_logo_' + thisValue + '.png');
          logoImages[thisId].removeClass('hide');
        }
      }).change();
    });
  });
</script>
{{ footer }} 