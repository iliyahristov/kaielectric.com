<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/1999/REC-html401-19991224/strict.dtd">
<html>
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
	<title>{{ text_subject }}</title>
</head>
<body style="color: #000000;font-family: 'Source Sans Pro', Helvetica, Arial, sans-serif;font-size: 12px;">
<div style="width: {{ width }};">
	{{ header }}
	{% if products %}
		<table bgcolor="#ffffff" border="0" cellpadding="0" cellspacing="0" style="text-align:left;margin-bottom: 30px;border-collapse: collapse; width: 100%; font-size: 12px; ">
			<tr style="background-color: #f1f1f1; font-weight: bold; text-align: left; padding: 10px; ">
				{% if settings.image %}
					<td style="padding: 10px 0;"></td>
				{% endif %}
				{% if settings.name %}
					<td style="padding: 10px 0;">{{ text_product }}</td>
				{% endif %}
				{% if settings.tax %}
					<td style="padding: 10px 0;">{{ text_tax }}</td>
				{% endif %}
				{% if settings.model %}
					<td style="padding: 10px 0;">{{ text_model }}</td>
				{% endif %}
				{% if settings.sku %}
					<td style="padding: 10px 0;">{{ text_sku }}</td>
				{% endif %}
				{% if settings.quantity %}
					<td style="padding: 10px 0;">{{ text_quantity }}</td>
				{% endif %}
				{% if settings.price %}
					<td style="padding: 10px 0;">{{ text_price }}</td>
				{% endif %}
				{% if settings.total %}
					<td style="padding: 10px 0;">{{ text_total }}</td>
				{% endif %}
			</tr>
			{% for product in products %}
				<tr style="background-color: #ffffff; text-align: left; padding: 10px;border-bottom: 1px dashed #dddddd; ">
					{% if settings.image %}
						<td style="padding: 10px 0;"><img src="{{ product.image }}" style="max-width: 120px;" /></td>
					{% endif %}
					{% if settings.name %}
						<td style="padding: 10px 0;">{{ product.name }} {% for option in product.option %}<br/> &nbsp;<small> - {{ option.name }}: {{ option.value }}</small>{% endfor %}</td>
					{% endif %}
					{% if settings.tax %}
						<td style="padding: 10px 0;">{{ product.tax }}</td>
					{% endif %}
					{% if settings.model %}
						<td style="padding: 10px 0;">{{ product.model }}</td>
					{% endif %}
					{% if settings.sku %}
						<td style="padding: 10px 0;">{{ product.sku }}</td>
					{% endif %}
					{% if settings.quantity %}
						<td style="padding: 10px 0;">{{ product.quantity }}</td>
					{% endif %}
					{% if settings.price %}
						<td style="padding: 10px 0;">{{ product.price }}</td>
					{% endif %}
					{% if settings.total %}
						<td style="padding: 10px 0;">{{ product.total }}</td>
					{% endif %}
				</tr>
			{% endfor %}
		</table>
	{% endif %}
	{{ footer }}
</div>
</body>
</html>
