<div class="row">
  <div class="col-sm-6">
    <h2>{{ text_new_customer }}</h2>
    {# <p>{{ text_checkout }}</p> #}
    <div class="radio">
      <label class="customer-check"> {% if account == 'register' %}
        <input type="radio" class="radio-check" name="account" value="register" />
        {% else %}
        <input type="radio" class="radio-check" name="account" value="register" />
        {% endif %}
        {{ text_register }}</label>
    </div>
    {% if checkout_guest %}
    <div class="radio">
      <label class="customer-check"> {% if account == 'guest' %}
        <input type="radio" class="radio-check " name="account" value="guest" />
        {% else %}
        <input type="radio" class="radio-check" name="account" value="guest" />
        {% endif %}
        {{ text_guest }}</label>
    </div>
    {% endif %}
    {# <p>{{ text_register_account }}</p> #}
    {# <input type="button" value="{{ button_continue }}" id="button-account" data-loading-text="{{ text_loading }}" class="btn btn-primary" /> #}
  </div>
  <div class="col-sm-6 login-register-social">
    <h2>{{ text_returning_customer }}</h2>
    {# <p>{{ text_i_am_returning_customer }}</p> #}
    <div class="gnArqp">        
