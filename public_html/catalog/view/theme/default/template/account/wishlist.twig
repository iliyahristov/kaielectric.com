{{ header }}
<div id="account-wishlist" class="container">
  <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
  </ul>
  {# {% if success %}
  <div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> {{ success }}
    <button type="button" class="close" data-dismiss="alert">&times;</button>
  </div>
  {% endif %} #}
  <div class="row">{{ column_left }}
    {% if column_left and column_right %}
    {% set class = 'col-sm-6' %}
    {% elseif column_left or column_right %}
    {% set class = 'col-sm-9' %}
    {% else %}
    {% set class = 'col-sm-12' %}
    {% endif %}
    <div id="content" class="{{ class }}">{{ content_top }}
      <h2>{{ heading_title }}</h2>
      {% if products %}
      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <td class="text-left">{{ column_name }}</td>
              <td class="text-left"></td>
              {# <td class="text-right">{{ column_stock }}</td> #}
               <td class="text-left"></td>
              <td class="text-right">{{ column_price }}</td>
              {# <td class="text-right"></td> #}
            </tr>
          </thead>
          <tbody>
          
          {% for product in products %}
          <tr>
            <td class="text-left">{% if product.thumb %}<a href="{{ product.href }}"><img src="{{ product.thumb }}" alt="{{ product.name }}" title="{{ product.name }}" /></a>{% endif %}</td>
            <td class="text-left">
              <a href="{{ product.href }}">{{ product.name }}</a>
                <div class="model">
                  <small><span>Продуктов код: </span>{{ product.model }}</small>
                </div>
            </td>
            {# <td class="text-right">{{ product.stock }}</td> #}
            <td class="text-center"><a href="{{ product.remove }}" data-toggle="tooltip" title="{{ button_remove }}" class=""><i class="fa fa-times"></i></a></td>
            <td class="text-right">{% if product.price %}
              <span class="price"> 
              {% if not product.special %}
                {{ product.price }}
                {% else %} <b>{{ product.special }}</b> <br/> <s>{{ product.price }}</s> {% endif %} 
              </span>
              {% endif %}
            </td>
            <td class="text-right"><button type="button" onclick="cart.add('{{ product.product_id }}');" class="btn btn-primary">{{ button_add_to_cart }}</button>
          </td>
          </tr>
          {% endfor %}
            </tbody>
          
        </table>
      </div>
      {% else %}
      <p>{{ text_empty }}</p>
      {% endif %}
      {# <div class="buttons clearfix">
        <div class="pull-right"><a href="{{ continue }}" class="btn btn-primary">{{ button_continue }}</a></div>
      </div> #}
      {{ content_bottom }}</div>
    {{ column_right }}</div>
</div>
{{ footer }}