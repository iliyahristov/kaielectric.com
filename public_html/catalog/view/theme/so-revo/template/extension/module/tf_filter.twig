            {% if (filter['list_type'] == 'image' or filter['list_type'] == 'both') %} 
            <img src="{{ value['image'] }}" title="{{ value['name'] }}" alt="{{ value['name'] }}" />
            {% else %}
            <span class="checkmark fa"></span>
            {% endif %} 
            {% if (filter['list_type'] == 'text' or filter['list_type'] == 'both') %} 
              {{ value['name'] }}
            {% endif %}
